<EditForm Model="@Room">
    <DataAnnotationsValidator />

    <div class="modal-body was-validated">
        <div class="row d-flex justify-content-between">
            <div class="col-12 font-segoeUI font-weight-light">
                <div class="d-flex align-items-center justify-content-start">
                    <span class="oi oi-clock font-size-0_75 text-black-50 p-2"></span>
                    <input type="text" class="font-size-1_25" id="inputName" placeholder="Name" @bind="@Room.Name" required>
                    <ValidationMessage For="@(() => Room.Name)" />
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-6">
                <div class="d-flex align-items-center justify-content-start">
                    <span class="oi oi-clock font-size-0_75 text-black-50 p-2"></span>
                    <input type="number" class="form-control" id="inputPlaces" min="1" max="1000" @bind="@Room.Places" required>
                    <ValidationMessage For="@(() => Room.Places)" />
                </div>
            </div>

            <div class="form-group col-6">
                <div class="d-flex align-items-center justify-content-start">
                    <span class="oi oi-clock font-size-0_75 text-black-50 p-2"></span>
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="inputProjector" @bind="@Room.IsProjector">
                        <label class="custom-control-label text-muted" for="inputProjector"><small>Projector available</small></label>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-danger m-left-3">
            <small>@ErrorMessage</small>
        </div>
    </div>
</EditForm>

